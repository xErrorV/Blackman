{
    "name": "GigaNiga",
    "version": "1.0",
    "author": "BlackMan",
    "manifest_version": 3,
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["index.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/audio.ogg", "assets/parse-black.gif"],
            "matches": ["*://*/*"]
        }
    ],
    "host_permissions": ["<all_urls>"]
}
